{
  "name": "@1inch/fusion-plus-aptos",
  "version": "1.0.0",
  "description": "1inch Fusion+ Cross-Chain Atomic Swaps for Aptos",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:move": "aptos move compile",
    "test": "jest",
    "test:move": "aptos move test",
    "test:integration": "jest --testPathPattern=integration",
    "deploy:devnet": "aptos move publish --named-addresses fusion_swap=default",
    "deploy:testnet": "aptos move publish --named-addresses fusion_swap=default --url https://fullnode.testnet.aptoslabs.com",
    "deploy:mainnet": "aptos move publish --named-addresses fusion_swap=default --url https://fullnode.mainnet.aptoslabs.com",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist build",
    "dev": "ts-node src/examples/demo.ts",
    "compile": "hardhat compile",
    "deploy:polygon": "hardhat run scripts/deploy-polygon.ts --network polygon",
    "deploy:polygon-test": "hardhat run scripts/deploy-polygon.ts --network polygonMumbai"
  },
  "keywords": [
    "1inch",
    "fusion-plus",
    "atomic-swaps",
    "aptos",
    "cross-chain",
    "defi",
    "htlc"
  ],
  "author": "1inch Network",
  "license": "MIT",
  "dependencies": {
    "@aptos-labs/ts-sdk": "^3.1.3",
    "axios": "^1.6.0",
    "bignumber.js": "^9.1.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.0",
    "ethers": "^6.8.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "chai": "^4.2.0",
    "eslint": "^8.51.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.8",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "contracts/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/1inch/fusion-plus.git",
    "directory": "aptos-integration"
  },
  "bugs": {
    "url": "https://github.com/1inch/fusion-plus/issues"
  },
  "homepage": "https://github.com/1inch/fusion-plus/tree/main/aptos-integration#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}