{
  "name": "@1inch/cosmos-integration",
  "version": "1.0.0",
  "description": "1inch Fusion+ Cosmos integration with atomic swaps and cross-chain bridge",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "compile-contracts": "cargo build --release --target wasm32-unknown-unknown",
    "optimize-contracts": "bash scripts/optimize.sh",
    "deploy": "ts-node scripts/deploy.ts",
    "demo": "ts-node src/examples/demo.ts",
    "relayer": "ts-node src/relayer/index.ts",
    "e2e-test": "ts-node scripts/e2e-test.ts"
  },
  "keywords": [
    "1inch",
    "cosmos",
    "atomic-swap",
    "cross-chain",
    "htlc",
    "fusion-plus"
  ],
  "author": "1inch Network",
  "license": "MIT",
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.32.4",
    "@cosmjs/crypto": "^0.32.1",
    "@cosmjs/encoding": "^0.32.1",
    "@cosmjs/math": "^0.32.1",
    "@cosmjs/proto-signing": "^0.32.4",
    "@cosmjs/stargate": "^0.32.4",
    "cosmjs-types": "^0.9.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "solc": "^0.8.30",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
