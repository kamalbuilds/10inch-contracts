{
  "name": "@1inch/fusion-plus-sui",
  "version": "1.0.0",
  "description": "1inch Fusion+ Cross-Chain Atomic Swaps for Sui",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:move": "sui move build",
    "test": "jest",
    "test:move": "sui move test",
    "test:integration": "jest --testPathPattern=integration",
    "deploy:devnet": "sui client publish --gas-budget 200000000 --network devnet",
    "deploy:testnet": "sui client publish --gas-budget 200000000 --network testnet",
    "deploy:mainnet": "sui client publish --gas-budget 200000000 --network mainnet",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist build",
    "dev": "ts-node src/examples/demo.ts",
    "faucet:devnet": "sui client faucet --network devnet",
    "faucet:testnet": "sui client faucet --network testnet"
  },
  "keywords": [
    "1inch",
    "fusion-plus",
    "atomic-swaps",
    "sui",
    "cross-chain",
    "defi",
    "htlc",
    "move"
  ],
  "author": "1inch Network",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui": "^1.3.0",
    "@mysten/sui.js": "^0.54.1",
    "axios": "^1.6.0",
    "bignumber.js": "^9.1.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.0",
    "ethers": "^6.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "solc": "^0.8.30",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "files": [
    "dist/**/*",
    "contracts/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/1inch/fusion-plus.git",
    "directory": "sui-integration"
  },
  "bugs": {
    "url": "https://github.com/1inch/fusion-plus/issues"
  },
  "homepage": "https://github.com/1inch/fusion-plus/tree/main/sui-integration#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
